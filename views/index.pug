extends layout

block styles
  style.
    .split-screen {
      display: flex;
      height: calc(100vh - 100px);
    }
    #image-section {
      flex: 1;
      background-image: url('/img/met.jpg');
      background-size: cover;
      background-position: center;
    }
    .content-section-index {
      flex: 1;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      padding: 2rem;
      background-color: rgba(255, 255, 255, 0.9);
    }
    .cta-button {
      padding: 1rem 2rem;
      font-size: 1.2rem;
      background-color: var(--color-primary);
      color: white;
      border: 2px solid var(--color-primary);
      border-radius: 5px;
      cursor: pointer;
      text-decoration: none;
      transition: background-color 0.3s ease;
    }
    .cta-button:hover {
      background-color: white;
      color: var(--color-primary);
    }

block content
  .split-screen
    #image-section
    .content-section-index
      h2 Explora la Colección del MET
      p Descubre miles de obras de arte de todo el mundo y de todas las épocas.
      a.cta-button(href="/galeria") Ver galería

block scripts
  script(type="module", src="/js/main.js")