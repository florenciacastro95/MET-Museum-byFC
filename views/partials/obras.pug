each obra in obras
  .artwork-card
    .image-container(style="position: relative;")
      img(src=obra.primaryImageSmall || 'https://upload.wikimedia.org/wikipedia/commons/5/5e/No_image_available_-_museum.svg', alt=obra.title)
      .date-overlay
        p= obra.objectDate || 'Fecha desconocida'
    .card-content
      h2= obra.title
      p= obra.artistDisplayName || 'Artista desconocido'
      p= obra.culture || 'Cultura desconocida'
      if obra.additionalImages && obra.additionalImages.length > 0
